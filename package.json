{
  "scripts": {
    "dev": "npm run init-dist && echo '\\033[32minitial build...' && webpack --display=minimal && webpack-dev-server",
    "build": "npm run init-dist && NODE_ENV=production webpack",
    "watch": "npm run init-dist && webpack -w",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "eslint --quiet \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --quiet \"src/**/*.{ts,tsx}\" && prettier --write \"src/**/*.{ts,tsx}\"",
    "init-dist": "rm -rf dist/* && cp -r public/ dist"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.5",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.0.5",
    "raw-loader": "^4.0.1",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ress": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit",
      "prettier --write src/**/*.{ts,tsx}",
      "eslint --fix src/**/*.{ts,tsx}"
    ]
  },
  "private": true
}
